<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyActivityB">

    <Button
        android:id="@+id/activity_b_btn_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_name_a"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        />

    <Button
        android:id="@+id/activity_b_btn_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_name_b"
        app:layout_constraintTop_toBottomOf="@id/activity_b_btn_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        />

    <FrameLayout
        android:id="@+id/fragment_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_b_btn_b" />

